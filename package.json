{
  "name": "secure-messaging-app",
  "version": "1.0.0",
  "description": "Low-latency, end-to-end encrypted messaging app hosted on AWS",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "deploy": "cdk deploy",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "aws-sdk": "^2.1490.0",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.99.1-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.99.1-alpha.0",
    "aws-cdk": "^2.99.1",
    "constructs": "^10.3.0",
    "typescript": "^5.3.2",
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7"
  },
  "keywords": [
    "messaging",
    "encryption",
    "aws",
    "websocket",
    "real-time",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT"
}